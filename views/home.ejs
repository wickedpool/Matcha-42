<h5 class="ui horizontal header divider" style="color:white">
  <i class="bar chart icon" style="color:white"></i>
  Specifications
</h5>

<form class="ui form segment" style="color:white;background:none" method="post" action="/home/tri" >
	<div class="inline fields">
		<label style="color:white">Trier par :&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
		<div class="field">
			<div class="ui radio checkbox">
				<input type="checkbox" name="defau" checked="checked">
				<label>Default</label>
			</div>
		</div>
		<div class="field">
			<div class="ui radio checkbox">
				<input type="checkbox" name="famous">
				<label>Popularite</label>
			</div>
		</div>
		<div class="field">
			<div class="ui radio checkbox">
				<input type="checkbox" name="tags">
				<label>Tags</label>
			</div>
		</div>
		<div class="field">
			<INPUT class="ui primary submit button" TYPE="submit" NAME="nom" VALUE="Trier">
		</div>
	</div>
</form>

<hr>

<% if (!profile) { %>
		<div class="ui negative message">
		<i class="close icon"></i>
		<div class="header">
			IL N'Y A PAS D'UTILISATEURS QUI POURRAIT VOUS INTERRESSER
		</div>
		</div>
<% } else { %>
	<% profile.forEach(function(element) { %>
	<% var pic = element["mainpic"] %>
	<% var name = element["name"] %>
	<% var lname = element["lastname"] %>
	<% var sexe = element["sexe"] %>
	<% var age = element["age"] %>
	<% var descri = element["description"] %>
	<% var login = element["login"] %>
	<a href="user/<%= login %>">
		<div class="ui people shape">
		<div class="sides">
			<div class="side active">
				<div class="ui card">
					<div class="image">
						<img src="/images/upload_images/<%= pic %>">
					</div>
					<div class="content">
						<div class="header"><%= name %> <%= lname %></div>
							<div class="meta">
								<%= sexe %>, <%= age %> ans
							</div>
							<div class="description">
								<%= descri %>
							</div>
						</div>
						<div class="extra content">
							<span class="right floated">
							Joined in 2017
							</span>
							<span>
						</div>
					</div>
				</div>
			</div>
		</div>
		</div>
	<% }) %>
<% } %>


<% include footer %>
