<% include header %>

<div class="ui segment">
<h2 class="ui right floated header">Votre profil</h2>
<br>
<hr>
<br>
<div class="ui grid">
  <div class="doubling three column row">
    <div class="column">
		<div class="ui segment">
			<form class="ui form segment" method="post" action="/profil/upload" enctype="multipart/form-data">
				<% if (mainpic) { %>
                	<img alt="User Pic" src="images/upload_images/<%=mainpic%>" class="ui medium circular image">	
				<% } else { %>
					<img class="ui medium circular image" src="images/profil/steve.jpg">
				<% } %>
				<input class="form-control" type="file" name="uploaded_image" accept=""/>
				<hr>
				<div class="ui center">
					<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Envoyer ">
            	</div>
			</form>
		</div>
	</div>
    <div class="column">
		<div class="ui segment">
			<div class="ui teal empty circular label"></div> En Ligne
			<hr class="ui">
			<form class="ui form segment" method="post" action="/profil/base">
				<div class="ui large header" style="color:white"> <%= locals.name + ' ' + locals.lastname %> </div>
			<% if (locals.sexe == "male") { %>
				<p>
					Homme, <%= locals.age %>ans
				</p>
			<% } else if (locals.sexe == "female") { %>
				<p>
					Femme, <%= locals.age %>ans
				</p>
			<% } %>
			<% if (locals.interest == "male") { %>
				<p> Interresse par: &nbsp; Hommes <p>
			<% } else if (locals.interest == "female") { %>
				<p> Interresse par: &nbsp; Femmes <p>
			<% } else if (locals.interest == "both") { %>
				<p> Interresse par: &nbsp; Les deux <p>
			<% } %>
			<hr class="ui">
				<div class="two fields">
					<div class="field">
						<label>Edit Name</label>
						<input placeholder="First Name" name="name" type="text">
					<hr class="ui">
						<div class="ui center">
							<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Envoyer ">
						</div>
					</div>
					<div class="field">
						<label>Edit lastName</label>
						<input placeholder="Last Name" name="lastname" type="text">
					<hr class="ui">
						<div class="ui center">
							<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Envoyer ">
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
	<div class="column">
	<div class="ui segment">
	<form class="ui form segment" method="post" action="/profil">
		<div class="tag">
			<% if (tag) { %>
				<% tag.forEach(function(element) { %>
					<% var tag = element["tag"] %>
					<a class="ui label">
						<%= element["tag"] %>
						<a class="tagdel" href="user_edit/tag/<%= tag %>">
						<i class="delete icon"></i>
						</a>
					</a>
				<% }) %>
			<% } %>
		</div>
		<div class="field">
			<label>Entrez vos hobbies ou interets</label>
			<input type="text" name="tag" placeholder="exemple: musculation">
		</div>
		<div class="ui center">
			<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Envoyer ">
		</div>
	</form>
	</div>
	</div>
	</div>
	<% if (!locals.ok) { %>
		<div class="ui top pointing red basic label" style="background:none;height:2%">
			 Vous devez editer votre profil pour pouvoir continuer!
		</div>
	<% } %>

	<a href="user/<%= locals.login %>">Preview de votre profil</a>
			
	<br>
	<hr style="width:100%">
	<div class="ui segment textarea">
	<div class="column">
	<form class="ui form segment" method="post" action="/profil/des">
		<div class="ui form">
			<div class="field">
				<label>Votre description</label>
				<textarea name="descri" placeholder="Votre description,
exemple: Thomas XXans region parisienne, recherche femme licorne mature et sans complexe"><% if (locals.descri) %><%= locals.descri %></textarea>
            </div>
			<div class="ui center">
				<INPUT class="fluid ui primary submit button" TYPE="submit" NAME="nom" VALUE=" Envoyer ">
            </div>
		</div>
		</form>

	</div>
	</div>
	</div>
</div>

<% include footer %>
